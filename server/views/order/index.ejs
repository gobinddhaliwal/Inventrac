<% include ../partials/header.ejs %>

    <div class="container">
        <div class="row">
                <form  method="POST" class="form-inline">
                        <div class="form-group">
                            <input type="text" class="form-control" id="q" name="q" placeholder="Search...">
                        </div>
                        <a class="btn btn-primary" href="/order-list/search" role="button">
                             Search Order</a>
                    </form>
        </div>
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <a class="btn btn-primary" href="/order-list/add" role="button">
                <i class="fas fa-plus-circle"></i> Add Order</a>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">Order Description</th>
                        <th class="text-center">Order Number</th>
                        <th class="text-center">Product  Quantity</th>
                        <th class="text-center">Order Placed Date</th>
                        <th class="text-center">Order Delivery Date</th>
                        <th class="text-center">Order Location</th>
                        <th class="text-center">Order Status</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count = 0; count < orderList.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= orderList[count].orderDescription %></td>
                            <td class="text-center"><%= orderList[count].orderNumber %></td>
                            <td class="text-center"><%= orderList[count].productQuantity %></td>
                            <td class="text-center"><%= orderList[count].orderPlaceDate %></td>
                            <td class="text-center"><%= orderList[count].orderDeliveryDate %></td>
                            <td class="text-center"><%= orderList[count].Location %></td>
                            <td class="text-center"><%= orderList[count].Status %></td>
                           
                            <td class="text-center">
                            <a href="/order-list/edit/<%= orderList[count]._id %>"
                                class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>

                            <td class="text-center">
                                    <a href="/order-list/delete/<%= orderList[count]._id %>"
                                        class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                    </td>
                            <td class="text-center">
                                        <a href="/order-list/track/<%= orderList[count]._id %>"
                                            class="btn btn-primary"> Track</a>
                                        </td>

                        </tr>
                    <% } %>
                </table>

            </div>
        </div>
    </div>

<% include ../partials/footer.ejs %>