<% include ../partials/header.ejs %>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <a class="btn btn-primary" href="/product-list/add" role="button">
                <i class="fas fa-plus-circle"></i> Add a Product</a>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">Product Name</th>
                        <th class="text-center">Category</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Mfg Date</th>
                        <th class="text-center">Exp Date</th>
                        <th class="text-center">Location</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count = 0; count < productList.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= productList[count].productName %></td>
                            <td class="text-center"><%= productList[count].category %></td>
                            <td class="text-center"><%= productList[count].quantity %></td>
                            <td class="text-center"><%= productList[count].mfgDate %></td>
                            <td class="text-center"><%= productList[count].expDate %></td>
                            <td class="text-center"><%= productList[count].location %></td>

                            <td class="text-center">
                            <a href="/product-list/edit/<%= productList[count]._id %>"
                                class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>

                            <td class="text-center">
                                    <a href="/product-list/delete/<%= productList[count]._id %>"
                                        class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                    </td>
                        </tr>
                    <% } %>
                </table>

            </div>
        </div>
    </div>

<% include ../partials/footer.ejs %>