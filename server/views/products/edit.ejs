<% include ../partials/header.ejs %>

<!-- Content for the Edit Page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
<% if(product.expDate=Date.now) { %>
    <div class="alert alert-danger" role="alert">
Product about to expire.          </div>
<% } %>
            <form class="form" method="POST">
               

                <div class="form-group">
                    <label for="ProductNameTextField">Product Name</label>
                    <input type="text" class="form-control" 
                    id="ProductNameTextField" 
                    placeholder="Enter Product Name"
                    name="productName"
                    value="<%= product.productName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="CategoryTextField">Category</label>
                    <input type="text" class="form-control" 
                    id="CategoryTextField" 
                    placeholder="Enter Category"
                    name="category"
                    value="<%= product.category %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="QuantityTextField">Quantity</label>
                    <input type="text" class="form-control" 
                    id="QuantityTextField" 
                    placeholder="Enter Quantity"
                    name="quantity"
                    value="<%= product.quantity %>"
                    required>
                </div>


                <div class="form-group">
                    <label for="MfgDateTextField">Mfg Date</label>
                    <input type="text" class="form-control" 
                    id="MfgDateTextField" 
                    placeholder="Enter Mfg Date"
                    name="mfgDate"
                    value="<%= product.mfgDate %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="ExpDateTextField">Exp Date</label>
                    <input type="text" class="form-control" 
                    id="ExpDateTextField" 
                    placeholder="Enter Exp Dtae"
                    name="expDate"
                    value="<%= product.expDate %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="LocationTextField">Location</label>
                    <input type="text" class="form-control" 
                    id="LocationTextField" 
                    placeholder="Enter Location"
                    name="location"
                    value="<%= product.location %>"
                    required>
                </div>
               

                <button type="submit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Submit</button>
                <a href="/product-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>


        </div>
    </div>
</div>





<% include ../partials/footer.ejs %>